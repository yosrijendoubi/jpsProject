                                    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" onclick="return openModal({{ agent_de_rotation.idEmp }})">
                                        <i class="fa fa-calendar text-success" aria-hidden="true"></i>
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
