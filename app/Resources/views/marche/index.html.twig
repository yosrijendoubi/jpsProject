{% extends 'base.html.twig' %}

{% block main %}
    <!-- Main content -->
    <section class="content">
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="form-group">
                    <form method="POST" action="{{path('marche_index')}}">
                        <div class="input-group md-form form-sm form-2 pl-0">

                            <input class="form-control my-0 py-1 lime-border" type="text" placeholder="Search" aria-label="Search" name="marche">
                            <div class="input-group-append">
                                <button type="submit" class="input-group-text lime lighten-2" id="basic-text1"><i class="fas fa-search text-grey" aria-hidden="true"></i></button>
                            </div>

                        </div>
                    </form>
                </div>
                <div class="row d-flex align-items-stretch">
                    {% for marche in pagination %}
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div style="border:solid; border-color: rgb(2 2 3 / 13%)" class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    Informations
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>{{ marche.libellle }}</b></h2>
                                            <p class="text-muted text-sm"><b>About: </b>  </p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: {{ marche.adresse }}</li>
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telephone : {{ marche.tel }}</li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="{{ vich_uploader_asset(marche, 'imageFile') }}" class="img-circle img-fluid" >
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="{{ path('marche_edit' , {'idMarche' : marche.idMarche }) }}" class="btn btn-sm bg-teal">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <a href="{{ path('consulter_marcher', {'idMarche': marche.idMarche ,'date': "now"|date("Y-m-d") })}}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Consulter
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->




    </section>
    <!-- /.content -->
{% endblock %}

{% block javascript %}
{{ parent() }}
<script>
$("#presence-nav-link").addClass('active');
</script>
{% endblock %}
